<Page
    x:Class="TaskManagerApp.ViewUserTask"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TaskManagerApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <ComboBox 
            Grid.Column="1"    
            Name="SelectUser"
            PlaceholderText="    Select a User"
            Foreground="DarkBlue"
            BorderBrush="DarkBlue"
            PlaceholderForeground="CornflowerBlue"
            FontSize="20"
            Height="45"
            Width="200"
            RelativePanel.AlignHorizontalCenterWithPanel="True"
            RelativePanel.AlignTopWithPanel="True"
            Margin="0,50,30,0"
            SelectionChanged="SelectUser_SelectionChanged"/>
        <ListView Name="TasksList"
                  Grid.Row="1"
                  SelectionMode="Single"
                  SelectionChanged="TasksList_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:ListViewUserControl ZTask="{Binding}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Name="checkTxt"/>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Grid Height="300" Width="500" BorderBrush="Black" BorderThickness="3" CornerRadius="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="TaskName"
                           Style="{StaticResource ResourceKey=DetailTitle}"/>
                    <TextBlock Name="TaskName"
                            Style="{StaticResource ResourceKey=Details}"/>
                </StackPanel>
                <TextBlock Name="TaskDescription"
                       Grid.ColumnSpan="2"
                           Grid.Row="1"
                        Style="{StaticResource ResourceKey=Details}"/>

                <StackPanel Grid.Row="2">
                    <TextBlock Text="Assigned By"
                           Style="{StaticResource ResourceKey=DetailTitle}"/>
                    <TextBlock Name="AssignedBy"
                            Style="{StaticResource ResourceKey=Details}"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="1">
                    <TextBlock Text="Assigned To"
                           Style="{StaticResource ResourceKey=DetailTitle}"/>
                    <TextBlock Name="AssignedTo"
                            Style="{StaticResource ResourceKey=Details}"/>
                </StackPanel>
                <StackPanel Grid.Row="3">
                    <TextBlock Text="Task ID"
                           Style="{StaticResource ResourceKey=DetailTitle}"/>
                    <TextBlock Name="TaskId"
                            Style="{StaticResource ResourceKey=Details}"/>
                </StackPanel>
                <StackPanel Grid.Row="3" Grid.Column="1">
                    <TextBlock Text="Priority"
                           Style="{StaticResource ResourceKey=DetailTitle}"/>
                    <TextBlock Name="Priority"
                            Style="{StaticResource ResourceKey=Details}"/>
                </StackPanel>
                <StackPanel Grid.Row="4">
                    <TextBlock Text="Start Date"
                           Style="{StaticResource ResourceKey=DetailTitle}"/>
                    <TextBlock Name="Startdate"
                            Style="{StaticResource ResourceKey=Details}"/>
                </StackPanel>
                <StackPanel Grid.Row="4" Grid.Column="1">
                    <TextBlock Text="End Date"
                           Style="{StaticResource ResourceKey=DetailTitle}"/>
                    <TextBlock Name="EndDate"
                           Style="{StaticResource ResourceKey=Details}"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
