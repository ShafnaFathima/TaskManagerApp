<Page
    x:Class="TaskManagerApp.AddTaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TaskManagerApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>
        <TextBox Name="TaskName"
                 PlaceholderText="Enter Task Name"
                 Style="{StaticResource TextBoxStyle}"
                 RelativePanel.AlignHorizontalCenterWithPanel="True"
                 Margin="0,150,0,0"/>
        <ComboBox  
                 Name="AssignedToUser"
                 PlaceholderText="   Select a User"
                 FontSize="18"
                 Foreground="DarkBlue"
                 BorderBrush="DarkBlue"
                 PlaceholderForeground="CornflowerBlue"
                 RelativePanel.Below="TaskName"
                 RelativePanel.AlignHorizontalCenterWith="TaskName"
                 Margin="0,20,0,0"
                 Width="200"
                 Height="45" 
                 >
        </ComboBox>
        <Button Name="AddBtn"
                Content="Add"
                Click="AddBtn_Click"
                Style="{StaticResource ResourceKey=BtnStyle}"
                RelativePanel.Below="AssignedToUser"
                Margin="0,20,0,0"
                RelativePanel.AlignHorizontalCenterWith="AssignedToUser"/>
        <TextBlock Name="ErrorTxt"
                   Style="{StaticResource ResourceKey=ErrorTxt}"
                   RelativePanel.AlignHorizontalCenterWith="TaskName"
                   RelativePanel.Below="AddBtn"/>
    </RelativePanel>
</Page>
