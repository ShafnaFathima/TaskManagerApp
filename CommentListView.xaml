<UserControl
    x:Class="TaskManagerApp.CommentListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TaskManagerApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Name="CommentsListView">
    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisible"/>
        <local:BoolToEnableConverter x:Key="BoolToEnable"/>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" BorderBrush="Gray" BorderThickness="0,0,0,1" Width="750">
            <StackPanel Orientation="Horizontal"  Margin="0,2,0,0" >
                <Border BorderBrush="CornflowerBlue" Background="LightBlue" BorderThickness="2">
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE77B;"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Foreground="CornflowerBlue"
                                           Height="20"
                                           Width="20"  
                                           HorizontalTextAlignment="Center" />
                </Border>
                <TextBlock Text= "{Binding ZComment.AuthorName,ElementName=CommentsListView,Mode=OneWay}"
                                           FontWeight="Bold"
                                           Margin="5,2,0,0"/>
                <Button x:Name="RemoveComment"
                Tag="{Binding ZComment.CommentId,Mode=OneWay,ElementName=CommentsListView}"
                Content="Remove"
                Foreground="Gray"
                Background="White"
                FontSize="12"
                Click="RemoveComment_Click"
                Margin="470,0,0,0"
                        Style="{StaticResource TextBlockButtonStyle}"
                Visibility="{Binding ZComment.CommentId,Converter={StaticResource BoolToVisible},Mode=OneWay,ElementName=CommentsListView}"/>
            </StackPanel>
            <TextBlock x:Name="AuthorTxt" 
                   Margin="31,0,0,0"
            Text="{Binding ZComment.Content,ElementName=CommentsListView,Mode=OneWay}"
                       TextWrapping="Wrap"
                       MaxWidth="615"
                       HorizontalAlignment="Left"
                       Width="Auto"
                       Height="Auto"/>
            <StackPanel Orientation="Horizontal" Margin="22,0,0,0">
                <Button Name="HeartBtn"
                        Height="25"
                        Width="35"
                        Style="{StaticResource TextBlockButtonStyle}"
                        Click="HeartBtn_Click"
                        IsEnabled="{Binding ZComment.CommentId,Converter={StaticResource BoolToEnable},Mode=OneWay,ElementName=CommentsListView}">
                    <Button.Content>
                        <Image Source="Assets/heart.PNG"
                               Stretch="Fill"/>
                    </Button.Content>
                </Button>
                <TextBlock Text="{Binding ZComment.Heart,ElementName=CommentsListView,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
                <Button Name="HappyBtn"                
                        Click="HappyBtn_Click"
                        Height="25"
                        Width="35"
                        Style="{StaticResource TextBlockButtonStyle}"
                        IsEnabled="{Binding ZComment.CommentId,Converter={StaticResource BoolToEnable},Mode=OneWay,ElementName=CommentsListView}">
                    <Button.Content>
                        <Image Source="Assets/happy.PNG"
                               Stretch="Fill"/>
                    </Button.Content>
                </Button>

                <TextBlock Text="{Binding ZComment.Happy,ElementName=CommentsListView,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
                <Button Name="LikeBtn"
                        Height="25"
                        Width="35"
                        Style="{StaticResource TextBlockButtonStyle}"
                        Click="LikeBtn_Click"
                        IsEnabled="{Binding ZComment.CommentId,Converter={StaticResource BoolToEnable},Mode=OneWay,ElementName=CommentsListView}"
                        >
                    <Button.Content>
                        <Image Source="Assets/like.PNG"
                               Stretch="Fill"/>
                    </Button.Content>
                </Button>
                <TextBlock Text="{Binding ZComment.Like,ElementName=CommentsListView,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
                <Button Name="SadBtn"
                         Height="25"
                        Width="35"
                        Style="{StaticResource TextBlockButtonStyle}"
                        Click="SadBtn_Click"
                        IsEnabled="{Binding ZComment.CommentId,Converter={StaticResource BoolToEnable},Mode=OneWay,ElementName=CommentsListView}"
                        >
                    <Button.Content>
                        <Image Source="Assets/sad.PNG"
                               Stretch="Fill"/>
                    </Button.Content>
                </Button>
                <TextBlock Text="{Binding ZComment.Sad,ElementName=CommentsListView,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
