<Page
    x:Class="TaskManagerApp.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TaskManagerApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="LightBlue">

    <Grid>
        <RelativePanel>
            <TextBox x:ConnectionId='2' 
                 Name="UsernameTxt"
                 PlaceholderText="Enter your username"
                 RelativePanel.AlignHorizontalCenterWithPanel="True"
                 Margin="0,150,0,0"
                 Style="{StaticResource TextBoxStyle}"/>
             <TextBox x:ConnectionId='3' 
                 Name="PasswordTxt"
                 PlaceholderText="Enter your password"
                 HorizontalAlignment="Center"
                 RelativePanel.Below="UsernameTxt"
                 RelativePanel.AlignHorizontalCenterWith="UsernameTxt"
                 Margin="0,20,0,0"
                 Style="{StaticResource TextBoxStyle}"/>
            <Button x:ConnectionId='4'
                Name="LoginBtn"
                Content="Login"
                                      
                RelativePanel.Below="PasswordTxt"
                RelativePanel.AlignHorizontalCenterWith="PasswordTxt"
                Margin="0,20,0,0"
                Style="{StaticResource BtnStyle}"/>
             <Button x:ConnectionId='5' 
                Name="SignUpBtn"
                Content="Sign Up"
                                       
                Style="{StaticResource BtnStyle}"
                RelativePanel.Below="LoginBtn"
                RelativePanel.AlignHorizontalCenterWith="PasswordTxt"
                Margin="0,20,0,0"/>
             <TextBlock x:ConnectionId='6' 
                   Name="ErrorTxt"
                   RelativePanel.Below="SignUpBtn"
                   RelativePanel.AlignHorizontalCenterWith="PasswordTxt"
                   Style="{StaticResource ErrorTxt}"
                   />
        </RelativePanel>
    </Grid>
</Page>

